    {{!-- displays user's saved notes, notes are clickable and take the user to the note's 'edit' page --}}
{{#each notes}}
<div class="result-list-div">
<div class="card result-card">
  <div class="card-body">
    <h1>{{description}}</h1>
<div class="accordion accordion-flush" id="accordionFlushExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="flush-headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{id}}" aria-expanded="false" aria-controls="flush-collapseOne">
        Edit 
      </button>
    </h2>
    <div id="flush-collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body"><form>
            <div class="mb-3">
                <input type="comment" placeholder="Add a comment" class="form-control w-50" id="comment" aria-describedby="comment">
            </div>
            <div class="mb-3">
                <label for="newTag" class="form-label">Change Tag:</label>
                <input type="newTag" class="form-control w-25" id="newTag" aria-describedby="newTag">
                <select class="form-select w-25" aria-label="Default select example">
                    <option selected>Choose a Tag</option>
                    {{#each ../tags}}
                    <option value="{{id}}">{{title}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
  </div>
</div>
</div>
</div>
</div>
</div>
{{/each}}